<Page x:Class="ProjetWPF.ResponsiblePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ResponsiblePage">


    <StackPanel Margin="10">
        <Calendar Name="calendar" SelectedDate="" SelectionMode="SingleDate" />
        <Label>Selected date:</Label>
        <TextBox Text="{Binding ElementName=calendar, Path=SelectedDate, StringFormat=d, UpdateSourceTrigger=PropertyChanged}"  Name="textboxDate"/>
        <Button Content="Submit" Click="AddDate"/>
    </StackPanel>
   

</Page>
