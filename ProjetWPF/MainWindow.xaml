<Window x:Class="ProjetWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetWPF"
        mc:Ignorable="d"
        Title="Projet App Avancée" Height="480" Width="800" WindowStartupLocation="CenterScreen">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image Source="https://www.gracq.org/sites/default/files/balade.jpg" Margin="-18,132,437,165" />
        <ListBox x:Name="LbxMember" Margin="303,49,0,82" SelectionChanged="LbxMember_SelectionChanged" HorizontalAlignment="Left" Width="391">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Label Content="{Binding Id}" Width="30"/>
                        <Label Grid.Column="1" Content="{Binding Name}" Width="70"/>
                        <Label Grid.Column="2" Content="{Binding FirstName}" Width="70"/>
                        <Label Grid.Column="3" Content="{Binding Tel}" Width="70"/>
                        <Label Grid.Column="4" Content="{Binding PassWord}" Width="100"/>
                        <Label Grid.Column="5" Content="{Binding Balance}" Width="30"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
