<Window x:Class="ProjetWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetWPF"
        mc:Ignorable="d"
        Title="Projet App Avancée" Height="480" Width="800" WindowStartupLocation="CenterScreen">
    <Grid HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,191,350">
        <Menu HorizontalAlignment="Left" Height="17" VerticalAlignment="Top" Width="36" Margin="12,-17,0,0">
            <MenuItem Header="File">
                <MenuItem Header="File"></MenuItem>
                <MenuItem Header="Save">
                    <MenuItem Header="Save"></MenuItem>
                    <MenuItem Header="Save All"></MenuItem>
                </MenuItem>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>

        </Menu>
        <ListBox x:Name="LbxMember" Margin="280,0,0,46" Height="31" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="246">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Label Content="{Binding Id}" Width="30"/>
                        <Label Grid.Column="1" Content="{Binding Name}" Width="70"/>
                        <Label Grid.Column="2" Content="{Binding FirstName}" Width="70"/>
                        <Label Grid.Column="3" Content="{Binding Tel}" Width="70"/>
                        <Label Grid.Column="4" Content="{Binding PassWord}" Width="100"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>

</Window>
