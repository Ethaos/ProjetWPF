<Window x:Class="ProjetWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetWPF"
        mc:Ignorable="d"
        Title="Projet App Avancée" Height="480" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="30" VerticalAlignment="Top">
            <Button Content="Members" Margin="10,10,0,0" Click="MemberClick"/>
            <Button Content="Category" Margin="10,10,0,0" Click="CategoryClick"/>
            <Button Content="Responsible" Margin="10,10,0,0" Click="ResponsibleClick"/>
            <!--Ajouter des boutons ici si on veut aller ailleurs
                <Button Content="" Margin="10,10,0,0"/> <- Un Exemple
            -->
        </StackPanel>
        <Frame x:Name="Main" Margin="0,30,0,0"/>
    </Grid>
</Window>
