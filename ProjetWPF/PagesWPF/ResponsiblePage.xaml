<Page x:Class="ProjetWPF.ResponsiblePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ResponsiblePage">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />

        </Grid.ColumnDefinitions>

        <Calendar x:Name="calendar" SelectedDate="" SelectionMode="SingleDate" Grid.ColumnSpan="2" Grid.RowSpan="3" Margin="37,132,77,129"/>
        <Label Content="Selected date:" Margin="47,0,12,120" Grid.Row="2"/>
        <TextBox Text="{Binding SelectedDate, ElementName=calendar, StringFormat=d, UpdateSourceTrigger=PropertyChanged}"  x:Name="textboxDate" Margin="139,4,90,120" Grid.Row="2" Grid.ColumnSpan="2"/>
        <Button Content="Create" Click="AddDate" Margin="0,1,42,110" Grid.Column="4" Grid.Row="2" />


    </Grid>

</Page>
